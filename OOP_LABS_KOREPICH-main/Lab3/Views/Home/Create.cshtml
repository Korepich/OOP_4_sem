@model Lab3.Models.Product
@{
    ViewBag.Title = "Добавление товара";
}
<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="name" class="control-label">Название</label>
        <input type="text" asp-for="name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="count" class="control-label">Количество товара</label>
        <input type="number" asp-for="count" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="price" class="control-label">Цена товара</label>
        <input type="number" step="0.0001" asp-for="price" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>